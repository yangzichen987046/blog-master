<%-include header %>
<form method="post" id="register">

    <div class="form-group">
        用户名: <input class="form-info" type="text" name="name" value="<%= users.name %>" disabled="disabled"/>
    </div>
    <div class="form-group">
        新密码:<input class="form-info" type="password" name="password" />
    </div>
    <div class="form-group">
        确认密码:<input class="form-info" type="password" name="password-repeat" />
    </div>
    <div class="form-group">
        个人邮箱:<input class="form-info" type="email" name="email" value="<%= users.email %>"/>
    </div>
    <div class="form-group">
        性别:
        <% if (users.sex == 0) { %>
        <input type="radio" name="sex" id="sex1" value="0" checked/>先生
        <input type="radio" name="sex" id="sex2" value="1"/>女士
        <%}%>
        <% if (users.sex == 1) { %>
        <input type="radio" name="sex" id="sex1" value="0"/>先生
        <input type="radio" name="sex" id="sex2" value="1" checked/>女士
        <%}%>
        <% if (users.sex ==null) { %>
        <input type="radio" name="sex" id="sex1" value="0"/>先生
        <input type="radio" name="sex" id="sex2" value="1"/>女士
        <%}%>
    </div>
    <div class="form-group">
        手机号:<input class="form-info" type="text" name="moblic" value="<%= users.moblic %>"/>
    </div>
    <div class="form-group">
        QQ号:<input class="form-info" type="text" name="qq" value="<%= users.qq %>"/>
    </div>
    <div class="form-control">
        <input id="reg1" type="submit" value="注册" />
    </div>

</form>
<%-include footer %>
